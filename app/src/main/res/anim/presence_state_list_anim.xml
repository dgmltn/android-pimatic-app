<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <set>
            <objectAnimator android:propertyName="translationZ"
                android:duration="@integer/presence_state_anim_duration"
                android:valueTo="2dp"
                android:valueType="floatType"/>
            <objectAnimator android:propertyName="saturation"
                android:duration="@integer/presence_state_anim_duration"
                android:valueTo="1.0"
                android:valueType="floatType" />
            <objectAnimator android:propertyName="alpha"
                android:duration="@integer/presence_state_anim_duration"
                android:valueTo="1"
                android:valueType="floatType" />
        </set>
    </item>

    <!-- base state -->
    <item>
        <set>
            <objectAnimator android:propertyName="translationZ"
                android:duration="@integer/presence_state_anim_duration"
                android:valueTo="0"
                android:valueType="floatType"/>
            <objectAnimator android:propertyName="saturation"
                android:duration="@integer/presence_state_anim_duration"
                android:valueTo="0.0"
                android:valueType="floatType" />
            <objectAnimator android:propertyName="alpha"
                android:duration="@integer/presence_state_anim_duration"
                android:valueTo="0.2"
                android:valueType="floatType" />
        </set>
    </item>
</selector>